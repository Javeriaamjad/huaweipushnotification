<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/meezan_background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/card_background"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huawei Push"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/meezan_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Testing"
                android:textColor="@color/meezan_text_secondary"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Device Push Token Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/meezan_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Device Push Token"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/meezan_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvDeviceTokenStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:background="@drawable/status_info"
                    android:textColor="@color/meezan_info"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDeviceToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Requesting device push token..."
                    android:textSize="12sp"
                    android:padding="12dp"
                    android:background="@drawable/token_background"
                    android:fontFamily="monospace"
                    android:textColor="@color/meezan_text_secondary"
                    android:minHeight="48dp"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Access Token Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/meezan_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Access Token"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/meezan_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvAccessTokenStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:background="@drawable/status_info"
                    android:textColor="@color/meezan_info"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAccessToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Requesting access token from Huawei API..."
                    android:textSize="12sp"
                    android:padding="12dp"
                    android:background="@drawable/token_background"
                    android:fontFamily="monospace"
                    android:textColor="@color/meezan_text_secondary"
                    android:minHeight="48dp"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Send Notification Button Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/meezan_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Push Notification"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/meezan_primary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnSendNotification"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Send Notification"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_selector"
                    android:enabled="false"
                    android:elevation="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Push Notification Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/meezan_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Push Notification Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/meezan_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvPushStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ready to send notification"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:background="@drawable/status_info"
                    android:textColor="@color/meezan_info"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvPushMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:padding="12dp"
                    android:background="@drawable/token_background"
                    android:textColor="@color/meezan_text_secondary"
                    android:visibility="gone"
                    android:minHeight="48dp"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>